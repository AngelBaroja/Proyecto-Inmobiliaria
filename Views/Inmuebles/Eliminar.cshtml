        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
