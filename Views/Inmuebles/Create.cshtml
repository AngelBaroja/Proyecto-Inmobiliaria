    @model Proyecto_Inmobiliaria.Models.Inmueble

    @{
        ViewData["Title"] = "Crear Inmueble";    
        var propietarios = ViewBag.Propietarios as List<SelectListItem>;
    }

    <h2>Crear Nuevo Inmueble</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Direccion">Dirección</label>
            <input asp-for="Direccion" class="form-control" required />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>        
        <div class="form-group">
            <label asp-for="Tipo">Tipo</label>
            <select asp-for="Tipo" class="form-control" required />
                <option value="">Seleccione...</option>
                <option value="Local">Local</option>
                <option value="Depósito">Depósito</option>
                <option value="Casa">Casa</option>
                <option value="Departamento">Departamento</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>  
        <div class="form-group">
            <label asp-for="Uso">Uso</label>
            <select asp-for="Uso" class="form-control" required />
                <option value="">Seleccione...</option>
                <option value="Comercial">Comercial</option>
                <option value="Residencial">Residencial</option>
            </select>
            <span asp-validation-for="Uso" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ambientes">Ambientes</label>
            <input asp-for="Ambientes" class="form-control" required />
            <span asp-validation-for="Ambientes" class="text-danger"></span>
        </div>             
        <div class="form-group">
            <label asp-for="Superficie">Superficie m²</label>
            <input asp-for="Superficie" class="form-control" required />
            <span asp-validation-for="Superficie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Latitud">Latitud</label>
            <input asp-for="Latitud" class="form-control" type="number" step="any" />
            <span asp-validation-for="Latitud" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Longitud">Longitud</label>
            <input asp-for="Longitud" class="form-control" type="number" step="any" />
            <span asp-validation-for="Longitud" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Estado">Estado</label>
            <select asp-for="Estado" class="form-control" required />
                <option value="">Seleccione...</option>
                <option value="Disponible">Disponible</option>
                <option value="Ocupado">Ocupado</option>
                <option value="No Disponible">No Disponible</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio">Precio $ </label>
            <input asp-for="Precio" class="form-control" type="number"/>
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdPropietario">Propietario</label>
            <select asp-for="IdPropietario" asp-items="propietarios" class="form-control" required>
                <option value="">Seleccione...</option>
            </select>
            <span asp-validation-for="IdPropietario" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Crear</button>
        <a asp-action="Index" class="text-volver">Volver a la lista</a>
    </form>