@model Proyecto_Inmobiliaria.Models.Usuario

<h1>Eliminar Usuario</h1>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Model.RolNombre
        </dd>

        <dt class="col-sm-2">
            Avatar
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <img src="@Model.Avatar" class="img-thumbnail" style="max-width:120px; border-radius:10px;" />
            }
            else
            {
                <img src="/Uploads/Avatares/usuarioSinImagen.png" class="img-thumbnail" style="max-width:120px; border-radius:10px;" />
            }
        </dd>
    </dl>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <form asp-action="EliminarConfirmado">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
