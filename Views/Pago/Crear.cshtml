@model Pago

@{
    ViewData["Title"] = "Pagos";
    int id = Model == null ? 0 : Model.id;
}

<div class="container mt-5">
    <h4 class="text-primary text-center">Pagos</h4>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Guardar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="IdContrato" class="form-label">Contrato</label>
                            <select asp-for="IdContrato" id="contratoSelect" class="form-control" required>
                                <option value="">Seleccione un contrato</option>
                                @foreach (var contrato in ViewBag.Contratos)
                                {
                                    <option value="@contrato.id" data-monto="@contrato.Monto">
                                        @contrato.Descripcion
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
                            <input asp-for="FechaPago" type="date" class="form-control" required />
                            <span asp-validation-for="FechaPago" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Monto" class="form-label" >Monto</label>
                            <input asp-for="Monto" type="number" id="montoInput" class="form-control" readonly />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Detalle" class="form-label">Detalle</label>
                            <input asp-for="Detalle" class="form-control" required />
                            <span asp-validation-for="Detalle" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Estado" class="form-label">Estado (Elegir)</label>
                            <select asp-for="Estado" class="form-control" required>
                                <option value="Aprobado">Pagado</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Cancelado">Cancelado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-50">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('contratoSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const monto = selectedOption.getAttribute('data-monto');
            document.getElementById('montoInput').value = monto || '';
        });
    </script>
}