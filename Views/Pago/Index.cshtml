@model IEnumerable<Pago>

@{
    ViewData["Title"] = "Pagos";
}

<div class="container my-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fa-solid fa-file-invoice-dollar me-2 text-primary"></i> Pagos
        </h2>
        <a asp-action="Crear" class="btn btn-primary shadow-sm">
            <i class="fa fa-plus me-1"></i> Crear Nuevo
        </a>
    </div>

    <!-- Buscador -->
    <div class="input-group mb-4 shadow-sm">
        <span class="input-group-text bg-primary text-white">
            <i class="fa fa-search"></i>
        </span>
        <input type="text" class="form-control" id="searchInput" placeholder="Buscar pago..." />
    </div>

    <!-- Mensaje de éxito -->
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">
            @ViewData["SuccessMessage"]
        </div>
    }

    <!-- Tabla -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>Listado de Pagos</strong>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Fecha de Pago</th>
                        <th>Monto</th>
                        <th>Detalle</th>
                        <th>Estado</th>
                        <th>ID Contrato</th>
                        <th class="acciones" style="width:120px;">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>@item.id</td>
                            <td>@item.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td class="text-success fw-semibold">$ @item.Monto</td>
                            <td class="text-center">@item.Detalle</td>
                            <td>
                                @if (item.Estado == "Pagado")
                                {
                                    <span class="badge bg-success">Pagado</span>
                                }
                                else if (item.Estado == "Pendiente")
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Cancelado</span>
                                }
                            </td>
                            <td>@item.IdContrato</td>
                            <td class="acciones">
                                <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-sm btn-warning me-1" title="Editar">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Detalle" asp-route-id="@item.id" class="btn btn-sm btn-info me-1" title="Detalle">
                                    <i class="fa fa-info"></i>
                                </a>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-sm btn-danger"
                                       onclick="return confirm('¿Eliminar el Pago ID: @item.id del Contrato @item.IdContrato?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/search.js"></script>
}
