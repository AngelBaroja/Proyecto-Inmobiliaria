@model IEnumerable<Proyecto_Inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
}

<div class="container my-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fa-solid fa-file-contract me-2 text-primary"></i> Contratos
        </h2>
        <a asp-action="Editar" class="btn btn-primary shadow-sm">
            <i class="fa fa-plus me-1"></i> Crear Nuevo
        </a>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="btn-group shadow-sm">
                <a asp-action="Index" asp-route-estado="todos" class="btn btn-outline-primary @(ViewBag.EstadoActual == "todos" ? "active" : "")">
                    Todos
                </a>
                <a asp-action="Index" asp-route-estado="vigentes" class="btn btn-outline-success @(ViewBag.EstadoActual == "vigentes" ? "active" : "")">
                    Vigentes
                </a>
                <a asp-action="Index" asp-route-estado="no-vigentes" class="btn btn-outline-danger @(ViewBag.EstadoActual == "no-vigentes" ? "active" : "")">
                    No Vigentes
                </a>
            </div>
        </div>

        <div class="col-md-4 ms-auto">
            <form asp-action="Index" method="get" class="form-inline justify-content-end">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <select name="dias" class="form-select form-select-sm border-primary" onchange="this.form.submit()">
                        <option value="">Contratos por vencer en...</option>
                        <option value="30" selected="@(ViewBag.Dias == 30)">Próximos 30 días</option>
                        <option value="60" selected="@(ViewBag.Dias == 60)">Próximos 60 días</option>
                        <option value="90" selected="@(ViewBag.Dias == 90)">Próximos 90 días</option>
                    </select>
                    <input type="hidden" name="estado" value="proximos-a-vencer" />
                </div>
            </form>
        </div>
    </div>

    <!-- Mensaje -->
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">
            @ViewData["SuccessMessage"]
        </div>
    }

    <!-- Tabla -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>Listado de Contratos</strong>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Monto</th>
                        <th>Inquilino</th>
                        <th>Inmueble</th>
                        <th style="width:160px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                            <td class="text-success fw-semibold">$@item.Monto</td>
                            <td>@item.Inquilino?.Nombre @item.Inquilino?.Apellido</td>
                            <td>@item.Inmueble?.Direccion</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-sm btn-warning mx-1 my-1" title="Editar">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Detalle" asp-route-id="@item.id" class="btn btn-sm btn-info mx-1 my-1" title="Detalle">
                                    <i class="fa fa-info"></i>
                                </a>
                                <a asp-action="ListaPagos" asp-route-id="@item.id" class="btn btn-sm btn-success mx-1 my-1 text-white" title="Pagos del contrato">
                                    <i class="fa fa-tags"></i>
                                </a>
                                @if(!item.Estado){
                                    <a asp-action="Renovar" asp-route-id="@item.id" class="btn btn-sm btn-secondary mx-1" title="Renovar">
                                    <i class="fa fa-retweet"></i>
                                </a>
                                <a asp-action="FinalizarContrato" asp-route-id="@item.id" class="btn btn-sm btn-danger mx-1" title="Finalizar Contrato">
                                    <i class="fa fa-window-close"></i>
                                </a>
                                }
                                @if (User.IsInRole("Administrador"))
                                {
                                    <form asp-action="Eliminar" asp-route-id="@item.id" method="post" class="d-inline"
                                          onsubmit="return confirm('¿Eliminar el contrato?');">
                                        <button type="submit" class="btn btn-sm btn-danger mx-1">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
        <ul class="pagination pagination-sm custom-pagination">
            @if (Pagina > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="~/Contrato/Index?pagina=@(Pagina - 1)&estado=@ViewBag.EstadoActual">
                        <i class="fa-solid fa-angles-left"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fa-solid fa-angles-left"></i></span>
                </li>
            }

            @for (int i = 1; i <= TotalPaginas; i++)
            {
                <li class="page-item @(i == Pagina ? "active" : "")">
                    <a class="page-link" href="~/Contrato/Index?pagina=@i&estado=@ViewBag.EstadoActual">@i</a>
                </li>
            }

            @if (Pagina < TotalPaginas)
            {
                <li class="page-item">
                    <a class="page-link" href="~/Contrato/Index?pagina=@(Pagina + 1)&estado=@ViewBag.EstadoActual">
                        <i class="fa-solid fa-angles-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fa-solid fa-angles-right"></i></span>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/search.js"></script>
}
