@model IEnumerable<Pago>

@{
    ViewData["Title"] = "Pagos del Contrato";
}

<div class="container my-4">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fa-solid fa-file-invoice-dollar me-2 text-primary"></i>
            Pagos del Contrato
        </h2>
        <a asp-controller="Contrato" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left me-1"></i> Volver a Contratos
        </a>
    </div>

    <!-- Mensaje informativo -->
    @if (ViewData["InfoMessage"] != null)
    {
        <div class="alert alert-info shadow-sm">
            @ViewData["InfoMessage"]
        </div>
    }

    <!-- Tabla de pagos -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <strong>Historial de Pagos</strong>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>N° Pago</th>
                        <th>Fecha de Pago</th>
                        <th>Monto</th>
                        <th>Detalle</th>
                        <th>Estado</th>
                        <th style="width:130px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pago in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>@pago.id</td>
                            <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td class="text-success fw-semibold">$ @pago.Monto</td>
                            <td class="text-center">@pago.Detalle</td>
                            <td>
                                @if (pago.Estado == "Pagado")
                                {
                                    <span class="badge bg-success">Pagado</span>
                                }
                                else if (pago.Estado == "Pendiente")
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Cancelado</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@pago.id" class="btn btn-sm btn-warning me-1" title="Editar">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Detalle" asp-route-id="@pago.id" class="btn btn-sm btn-info me-1" title="Detalle">
                                    <i class="fa fa-info"></i>
                                </a>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <form asp-action="Eliminar" asp-route-id="@pago.id" method="post" class="d-inline"
                                        onsubmit="return confirm('¿Estás seguro de eliminar el Pago ID: @pago.id del Contrato ID: @pago.IdContrato?');">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Formulario: Nuevo pago -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <strong>Agregar Nuevo Pago</strong>
        </div>
        <div class="card-body">
            <form asp-controller="Pago" asp-action="Guardar" method="post">
                <input type="hidden" name="IdContrato" value="@ViewBag.Contrato.id" />

                <div class="mb-3">
                    <label for="FechaPago" class="form-label">Fecha de Pago</label>
                    <input type="date" name="FechaPago" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="Monto" class="form-label">Monto</label>
                    <input type="number" name="Monto" id="montoInput" class="form-control"
                           value="@ViewBag.Contrato.Monto" readonly />
                </div>

                <div class="mb-3">
                    <label for="Estado" class="form-label">Estado</label>
                    <select name="Estado" class="form-select" required>
                        <option value="Pagado">Pagado</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Detalle" class="form-label">Detalle</label>
                    <textarea name="Detalle" rows="3" class="form-control" placeholder="Ingrese un detalle..."></textarea>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save me-1"></i> Guardar
                </button>
            </form>
        </div>
    </div>
</div>
